datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

model User {
  id         BigInt     @id @default(autoincrement())
  name       String
  avatar_url String?
  messages   Message[] @relation("UserMessages")
}

model Message {
  id         BigInt   @id @default(autoincrement())
  project_id BigInt
  sender_id  BigInt
  content    String
  file_url   String?
  file_name  String?
  created_at DateTime @default(now())

  // Relacionamentos
  sender   User    @relation(fields: [sender_id], references: [id], name: "UserMessages")
  project  Project @relation(fields: [project_id], references: [id])
}

model Project {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  name       String?
  
  messages   Message[]
}
